{% extends "../layout.njk" %}
{% block content %}
<main id="main" class="pt-8 max-w-[1170px] mx-auto">
   <div class="text-black font-bold">
      <div class="min-h-[40px] flex justify-between px-4 mx-auto">
         <div class="flex-col flex-grow medium-text-center">
            <div class="is-small">
               <span><span><a href="https://bkcs.hust.edu.vn/" class="text-[rgba(102,102,102,.7)] font-normal">Home</a> Â» <span class="breadcrumb_last" aria-current="page">News</span></span></span>			
            </div>
         </div>
         <!-- .flex-left -->
      </div>
      <div class="border-[0.5px] border-[#7a9c59] w-[calc(100%-_2rem)] mx-auto"></div>
      <!-- flex-row -->
   </div>
   <div id="content" class="pt-8">
      <div class="row flex">
         <div class="md:max-w-[75%] md:basis-3/4 px-4 -ml-4 pb-[30px]">
            <div id="post-list">
               <div id="row-1973311873" class="flex flex-wrap">

                  {% for article in articles -%}
                  <div class="col post-item md:max-w-[33.33%] md:w-1/3 px-4 pb-[30px]">
                     <div class="h-full hover:shadow-[0_0_15px_#818181] hover:-translate-y-2.5 duration-300 border-[#dfdfdfab] border group">
                        <a href="/{{article.category.alias}}/{{article.slug}}.html" class="plain">
                            <div class="bg-white my-0 mx-auto relative w-full">
                                <div class="box-image relative h-auto overflow-hidden">
                                <div class="image-cover">
                                    <img width="400" height="267" src="/images/post-thumb.jpg" class="attachment-medium size-medium wp-post-image aspect-[4/3]" alt="">
                                </div>
                                </div>
                                <div class="box-text text-left p-4 w-full" style="background-color:rgb(255, 255, 255);padding:15px 15px 15px 15px;">
                                <div class="box-text-inner blog-post-inner prose font-nunito">

                                    <h4 class="post-title is-large h-[48px] overflow-hidden">{{ article.name }}</h4>
                                    <div class="is-divider"></div>
                                    <p class="from_the_blog_excerpt mt-4 h-[48px] overflow-hidden mb-[.1em]"> {{article.description | mix}}	</p>

                                </div>
                                </div>
                                <div class="top-0 text-2xl m-0 left-0 absolute w-[4.2rem] h-[3.25rem]">
                                <div class="group-hover:bg-[#1E73C4] group-hover:text-white group-hover:border-0 bg-white text-[#1E73C4] py-2 border-[2px] border-[#1e73be]">
                                    <p class="post-date-day text-center font-bold text-2xl">{{ article.publishedAt | getDayOfMonth }}</p>
                                    <p class="post-date-month text-center font-bold text-base">{{ article.publishedAt | getMonth }}</p>
                                </div>
                                </div>
                            </div>
                        </a>
                    </div>
                  </div>
                  {%- endfor %}
               </div>
            </div>
         </div>
         <div class="md:max-w-[25%] md:basis-1/4 pl-8 pb-[30px]">
            {% include "./sidebar.njk" %}
         </div>
      </div>
   </div>
</main>
{% endblock %}